-- Sorcerer Battlegrounds Script

-- Function to give infinite mana with error handling
local function giveInfiniteMana()
    pcall(function()
        local player = game.Players.LocalPlayer
        if player:FindFirstChild("Mana") then
            player.Mana.Value = math.huge
        else
            warn("Mana not found.")
        end
    end)
end

-- Function to auto-cast a spell with error handling
local function autoCastSpell(spellName)
    pcall(function()
        local player = game.Players.LocalPlayer
        local spell = player.Backpack:FindFirstChild(spellName) or player.Character:FindFirstChild(spellName)
        if spell and spell:IsA("Tool") then
            spell:Activate()
        else
            warn("Spell '" .. spellName .. "' not found.")
        end
    end)
end

-- Function to show a sliding notification with a message
local function showNotification(message)
    pcall(function()
        local playerGui = game.Players.LocalPlayer:WaitForChild("PlayerGui")
        local screenGui = Instance.new("ScreenGui", playerGui)
        local frame = Instance.new("Frame", screenGui)
        local textLabel = Instance.new("TextLabel", frame)

        screenGui.Name = "NotificationGui"
        frame.Size = UDim2.new(0, 300, 0, 50)
        frame.Position = UDim2.new(1, 0, 1, -60)
        frame.BackgroundTransparency = 0.5
        frame.BackgroundColor3 = Color3.new(0, 0, 0)

        textLabel.Size = UDim2.new(1, 0, 1, 0)
        textLabel.Text = message
        textLabel.TextColor3 = Color3.new(1, 1, 1)
        textLabel.BackgroundTransparency = 1

        -- Slide in the frame
        frame:TweenPosition(UDim2.new(1, -310, 1, -60), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.5, true)
        wait(3)
        -- Slide out the frame
        frame:TweenPosition(UDim2.new(1, 0, 1, -60), Enum.EasingDirection.In, Enum.EasingStyle.Quad, 0.5, true)
        wait(0.5)
        screenGui:Destroy()
    end)
end

-- Attempt to activate infinite mana
pcall(giveInfiniteMana)

-- Example auto-cast spell usage
pcall(autoCastSpell, "Fireball") -- Automatically casts the "Fireball" spell if available

-- Show notification
showNotification("discord - riofluxxx")

print("Sorcerer Battlegrounds script executed successfully!")
